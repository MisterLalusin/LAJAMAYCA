<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fffefe">

    <ImageView
        android:layout_height="66dp"
        app:srcCompat="@mipmap/ic_login"
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/uname"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/upass"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/uname"
        android:layout_alignStart="@+id/uname"
        android:hint="Password"
        android:textColor="?attr/actionMenuTextColor" />

    <TextView
        android:text="La Jamayca Hotel and Resort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ulogin"
        android:background="#ff0000"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/upass"
        android:layout_alignStart="@+id/upass"
        android:layout_alignEnd="@+id/upass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="36sp"
        android:fontFamily="serif-monospace"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/uname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Don't have an account? Click  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"

        android:fontFamily="serif"
        android:textSize="10sp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/ulogin"
        android:layout_alignStart="@+id/textView5" />

    <ImageButton
        app:srcCompat="@mipmap/ic_here"

        android:id="@+id/imgbtnhere"
        android:background="#00000000"
        android:elevation="24dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:layout_height="16dp"
        android:layout_width="45dp"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/uname"
        android:layout_marginTop="50dp"
        android:fontFamily="monospace"
        android:hint="Username"
        android:textColor="?attr/actionMenuTextColor"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
