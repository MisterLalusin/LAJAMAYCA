<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="data.ba.se.lajamayca.CreateAccount">


    <TextView
        android:text="La Jamayca Hotel and Resort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtemail"
        android:hint="Enter your e-mail"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtpassword"
        android:hint="Create password"
        android:textSize="14sp"
        android:layout_below="@+id/txtemail"
        android:layout_alignStart="@+id/txtemail"
        android:layout_alignEnd="@+id/txtemail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtphone"
        android:hint="Enter your Phone Number"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:layout_below="@+id/txtpassword"
        android:layout_alignStart="@+id/txtpassword"
        android:layout_alignEnd="@+id/txtemail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtphone"
        android:layout_alignStart="@+id/txtphone"
        android:id="@+id/txtfname"
        android:layout_alignEnd="@+id/txtphone"
        android:fontFamily="monospace"
        android:hint="First Name"
        android:textSize="14sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtlname"
        android:fontFamily="monospace"
        android:hint="Last Name"
        android:textSize="14sp"
        android:layout_below="@+id/txtfname"
        android:layout_alignStart="@+id/txtfname"
        android:layout_alignEnd="@+id/txtfname" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_account"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Create Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:id="@+id/btnreg"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:layout_height="30dp"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:onClick="butt"/>

    <TextView
        android:text="Already have an account? Click "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:fontFamily="serif"
        android:textSize="10sp"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageButton
        app:srcCompat="@mipmap/ic_here"

        android:id="@+id/imgbtnlog"
        android:background="#00000000"
        android:elevation="24dp"
        android:scaleType="centerCrop"
        android:layout_height="16dp"
        android:onClick="custom"
        android:layout_width="45dp"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/btnreg" />

</RelativeLayout>
